<div class="overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all" id="<%= dom_id technology %>">
  <div class="bg-white px-4 py-4 flex justify-between items-center">
    <%= link_to edit_technology_path(technology) do %>
      <div class="sm:flex sm:items-center gap-3">
        <div class="mx-auto flex size-12 shrink-0 items-center justify-center rounded-full bg-red-100 sm:mx-0 sm:size-10">
          <%= image_tag technology.logo, class: "size-12 flex-none rounded-full bg-gray-50" if technology.logo.attached? %>
        </div>
        <div class="text-center sm:text-left">
          <h3 class="text-base font-semibold text-gray-900" id="modal-title"><%= technology.name %></h3>
        </div>
      </div>
    <% end %>
    <span class="group-hover:bg-white rounded-lg">
      <%= link_to technology, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-500 hover:text-red-700 focus:outline-none focus:ring-2 focus:ring-red-300" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.136 21H7.864a2 2 0 01-1.997-1.858L5 7m5 4v6m4-6v6M4 7h16M10 4h4m-4 0a2 2 0 00-2 2v0a2 2 0 002 2h4a2 2 0 002-2v0a2 2 0 00-2-2m-4 0h4" />
        </svg>
      <% end %>
    </span>
  </div>
</div>

