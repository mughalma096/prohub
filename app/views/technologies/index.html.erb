<div class="w-full">
  <div id="technologies" class="grid grid-cols-4 gap-4">
    <% @technologies.each do |technology| %>
      <%= render technology %>
    <% end %>
  </div>
</div>

<div class="relative">
  <%= link_to new_technology_path, class: "bg-blue-600 text-white block font-medium flex items-center space-x-2 fixed bottom-4 right-4 text-white p-4 rounded-full shadow-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400" do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
    </svg>
    <span>Technology</span>
  <% end %>
</div>