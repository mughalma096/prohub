<div class="w-full space-y-3">
  <div class="flex items-center lg:justify-end">
    <%= form_for :project, method: :get do |form| %>
      <div data-controller="select">
        <%= form.select :technologies, Technology.pluck(:name, :id), { selected: params.dig(:project, :technologies), multiple: true, include_blank: "Filter by technologies" },
                        data: { turbo: "advance", select_target: "dropdown", action: "change->select#filterTechnologies" },
                        class: "choices-multi-select block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full"
        %>
      </div>
    <% end %>

    <div class="flex items-center justify-center ml-3">
      <button class="flex items-center gap-2 px-4 py-2 bg-blue-500 text-white font-medium rounded-lg shadow-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400" onclick="printPopup();">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
          <polyline points="14 2 14 8 20 8"></polyline>
          <line x1="16" y1="13" x2="8" y2="13"></line>
          <line x1="16" y1="17" x2="8" y2="17"></line>
          <polyline points="10 9 9 9 8 9"></polyline>
        </svg>
        <span>PDF</span>
      </button>
    </div>
  </div>

  <div id="projects" class="min-w-full space-y-4">
    <% @projects.each do |project| %>
      <%= render project %>
    <% end %>
  </div>
</div>

<div class="relative">
  <%= link_to new_project_path, class: "bg-blue-600 text-white block font-medium flex items-center space-x-2 fixed bottom-4 right-4 text-white p-4 rounded-full shadow-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400" do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
    </svg>
    <span>Project</span>
  <% end %>
</div>

<script>
    function printPopup() {
        const originalContent = document.body.innerHTML; // Store original content
         // Get specific section
        document.body.innerHTML = document.getElementById("projects").innerHTML; // Replace content
        window.print();
        document.body.innerHTML = originalContent; // Restore original content after printing
    }
</script>