<%= form_with(model: project, class: "contents") do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, rows: 4, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.rich_textarea :description, rows: 4, class: "block shadow rounded-md border border-gray-400 bg-white outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :start_date %>
    <%= form.date_field :start_date, value: form.object.start_date || DateTime.now, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :end_date %>
    <%= form.date_field :end_date, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5" data-controller="select">
    <%= form.label :technologies %>
    <%= form.select :technology_ids, Technology.pluck(:name, :id), { multiple: true, include_blank: "Select technologies" }, data: { select_target: "dropdown" }, class: "choices-multi-select block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5" data-controller="upload">
    <%= form.label :cover %>
    <div class="mt-2 flex justify-start rounded-lg border border-dashed border-gray-900/25">
      <div class="flex flex-col items-center justify-center p-2 px-3">
        <label
          class="mt-1 inline-block text-sm font-medium leading-5 text-white transition rounded-lg cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-50"
          for="imageUpload">
          <span class="w-40 h-40 border border-gray-300 rounded-lg overflow-hidden bg-gray-50 flex items-center justify-center">
            <img data-upload-target="preview" src="#" alt="Preview" class="hidden w-full h-full object-cover">
            <svg class="mx-auto size-12 text-gray-300" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true" data-slot="icon">
              <path fill-rule="evenodd" d="M1.5 6a2.25 2.25 0 0 1 2.25-2.25h16.5A2.25 2.25 0 0 1 22.5 6v12a2.25 2.25 0 0 1-2.25 2.25H3.75A2.25 2.25 0 0 1 1.5 18V6ZM3 16.06V18c0 .414.336.75.75.75h16.5A.75.75 0 0 0 21 18v-1.94l-2.69-2.689a1.5 1.5 0 0 0-2.12 0l-.88.879.97.97a.75.75 0 1 1-1.06 1.06l-5.16-5.159a1.5 1.5 0 0 0-2.12 0L3 16.061Zm10.125-7.81a1.125 1.125 0 1 1 2.25 0 1.125 1.125 0 0 1-2.25 0Z" clip-rule="evenodd" />
            </svg>
          </span>
        </label>
        <%= form.file_field :cover, accept: "image/*", class: "hidden", id: "imageUpload", data: { action: "change->upload#preview" } %>
        <p class="text-xs/5 text-gray-600">PNG, JPG, GIF up to 10MB</p>
      </div>
    </div>
  </div>

  <div class="my-5" data-controller="upload">
    <%= form.label :images %>
    <div class="mt-2 flex justify-start rounded-lg border border-dashed border-gray-900/25">
      <div class="flex flex-col items-center justify-center p-2 px-3">
        <div class="flex gap-3">
          <label data-upload-target="preview"
            class="mt-1 inline-block text-sm font-medium leading-5 text-white transition rounded-lg cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-50"
            for="imagesUpload">
            <span class="w-40 h-40 border border-gray-300 rounded-lg overflow-hidden bg-gray-50 flex items-center justify-center">
              <img src="#" alt="Preview" class="hidden w-full h-full object-cover">
              <svg class="mx-auto size-12 text-gray-300" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true" data-slot="icon">
                <path fill-rule="evenodd" d="M1.5 6a2.25 2.25 0 0 1 2.25-2.25h16.5A2.25 2.25 0 0 1 22.5 6v12a2.25 2.25 0 0 1-2.25 2.25H3.75A2.25 2.25 0 0 1 1.5 18V6ZM3 16.06V18c0 .414.336.75.75.75h16.5A.75.75 0 0 0 21 18v-1.94l-2.69-2.689a1.5 1.5 0 0 0-2.12 0l-.88.879.97.97a.75.75 0 1 1-1.06 1.06l-5.16-5.159a1.5 1.5 0 0 0-2.12 0L3 16.061Zm10.125-7.81a1.125 1.125 0 1 1 2.25 0 1.125 1.125 0 0 1-2.25 0Z" clip-rule="evenodd" />
              </svg>
            </span>
          </label>
          <%= form.file_field :images, accept: "image/*", multiple: true, class: "hidden", id: "imagesUpload", data: { action: "change->upload#previews" } %>
        </div>
        <p class="text-xs/5 text-gray-600">PNG, JPG, GIF up to 10MB</p>
      </div>
    </div>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>