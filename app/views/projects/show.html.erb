<div class="flex items-center gap-2 mb-2 justify-between">
  <%= link_to projects_path, class: "flex rounded-lg p-3 bg-gray-400 text-white hover:bg-gray-500 gap-2" do %>
    <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12" />
    </svg>
    Back
  <% end %>
  <div class="flex gap-2">
    <%= link_to edit_project_path(@project), class: "rounded-lg p-3 bg-blue-600 flex text-white hover:bg-blue-700" do %>
      <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536M9 21h6a2 2 0 002-2v-5.586a2 2 0 00-.586-1.414L9 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
      </svg>
      Edit
    <% end %>

    <%= link_to @project, class: "rounded-lg p-3 bg-red-500 flex text-white hover:bg-red-700", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
      <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
      Delete
    <% end %>
  </div>
</div>

<div class="overflow-hidden bg-white rounded-md">
  <div class="mx-auto px-7 py-7">
    <div class="mx-auto grid grid-cols-2">
      <div>
        <p class="mt-2 text-pretty text-4xl font-semibold tracking-tight text-gray-900 sm:text-5xl"><%= @project.name %></p>
        <p class="mt-6 text-lg/8 text-gray-600"><%= @project.description %></p>
        <dl class="mt-10 space-y-8 text-base/7 text-gray-600">
          <div class="flex gap-3 flex-wrap">
            <% @project.technologies.each do |technology| %>
              <div class="bg-white/60 ring-2 ring-gray-900/10 font-semibold text-gray-900 flex items-center rounded-full py-2 px-3 gap-2">
                <%= image_tag technology.logo, class: "size-10 shrink-0 rounded-full" %>
                <span class="block truncate"><%= technology.name %></span>
              </div>
            <% end %>
          </div>
        </dl>
      </div>
      <div class="min-h-full min-w-full">
        <%= image_tag @project.cover.presence || "https://tailwindui.com/plus-assets/img/component-images/dark-project-app-screenshot.png",
                      class: "h-[46rem] rounded min-w-full object-cover [mask-image:linear-gradient(to_right,rgba(0,0,0,0.005)_0%,rgba(0,0,0,0.7)_100%)]" %>
      </div>
    </div>

    <h3 class="mt-5 text-pretty text-xl font-semibold tracking-tight text-gray-900 sm:text-xl">Images</h3>
    <div class="mt-5 grid grid-cols-4 items-center lg:grid-cols-4 gap-4">
      <% @project.images.each do |image| %>
        <div class="rounded-3xl bg-white/60 p-8 ring-1 ring-gray-900/10">
          <%= image_tag image.presence, class: "shadow-sm rounded min-w-full object-cover" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

